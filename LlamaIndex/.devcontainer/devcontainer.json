{
	"name": "RAG-LI",
	"image": "jianshao/llamaindex-demo:0.0.3",
	"features": {
		"ghcr.io/devcontainers/features/git:1": {}
	},
	"remoteEnv": {
		"PYTHONPATH": ".",
		"LLAMA_INDEX_CACHE_DIR": "~/.cache/huggingface/hub"
	},
	"runArgs": [
		"--gpus",
		"all"
	],
	"mounts": [
		{
			"source": "${localEnv:HOME}/.cache",
			"target": "/root/.cache",
			"type": "bind"
		}
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.black-formatter",
				"ms-python.isort",
				"alphabotsec.vscode-eclipse-keybindings"
			]
		}
	}
}