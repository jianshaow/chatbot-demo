{
	"name": "RAG-LI",
	"image": "jianshao/llamaindex-demo:0.0.2",
	"features": {
		"ghcr.io/devcontainers/features/git:1": {}
	},
	"remoteEnv": {
		"PYTHONPATH": "."
	},
	"mounts": [
		{"source": "${localEnv:HOME}/.cache", "target": "/root/.cache", "type": "bind"},
		{"source": "/tmp/llama_index", "target": "/tmp/llama_index", "type": "bind"}
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.black-formatter",
				"ms-python.isort",
				"alphabotsec.vscode-eclipse-keybindings"
			]
		}
	}
}
